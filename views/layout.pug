doctype html
html
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')

  body
    block content
    h1.text-center Log in
    form#signin-form(method='post' action='users/signin')
      .form-group
        input.form-control(name='username' placeholder='Username' required)
      .form-group
        input.form-control(name='password' type='password' placeholder='Password' required)
      button.btn.btn-primary.btn-block Sign In
      a.btn.btn-primary.btn-block(href='users/signup') Sign Up
