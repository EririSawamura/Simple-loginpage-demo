doctype html
html
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')

    body
      h1.text-center Sign up
      form
        .form-row(method='post' action='/')
          #username-container.form-group.col
            label(for='username') Username
            input#username.form-control(name='username')
          #password-container.form-group.col
            label(for='password') Password
            input#password.form-control(name='password' type='password')
        a.btn.btn-primary.btn-block(href='..') Submit